<%= tinymce %>

<%= simple_form_for(@event) do |f| %>
  <%= f.error_notification %>
  <h3>Event details:</h3>

  <br>
  <%= f.input :publish, label: 'Publish event?',  :as => :radio_buttons, :collection => [['yes', :yes], ['No', :no]] %><br>



  <br>
  <%= f.input :title, label: 'Event title', placeholder: 'Event name', :input_html => { :size => 50} %><br>



  <%= f.label 'Event description' %><br>
  <%= f.input :body, :input_html => { :class => 'tinymce', :rows => 15, :cols => 100  } %><br>


 <!--  Sign-up Deadline -->
  <%= f.input :deadline, label: 'Event Deadline', placeholder: 'dd/mm/yyyy' %><br>




  <!-- Image -->
  <br>
  <div class="upload_label col-md-12">
    <%= f.input :picture, label: 'Upload Image' %>
  </div>
  <br>
  <!-- Display image or deafult -->
  <div class="col-md-2">
      <%if @event.picture.present? %>
      <%= image_tag @event.picture.url(:medium), :class => "img-responsive center-block"%>
       <% else %>
       <%= image_tag "logo_ons.png", {class: "logo-wide"}%>
       <% end %>
  </div>


  <br>
  <br>



 <!--  Add calendar input box -->
 <div class="col-md-12">
    <div class="col-md-6 form_box_shaded">

      <h3><i class="ion-ios-calendar-outline"></i> Date, Time & Address</h3>

      <p><span class="form_box_font">Information below is used both for the "Add to Calendar" widget and for display in the Info-Box on the website </span></p>
      <!-- Description -->
      <%= f.input :calendar_title, label: 'Event Description', :input_html => { :size => 50} %>
      <br>

      <p><span class="form_box_font"><i class="ion-ios-clock-outline"></i> Date & Time:</span></p>
      <!-- Date -->
      <%= f.input :week_day, label: 'Weekday:' , placeholder: 'Monday', collection: [ "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday"] %>
      <br>
      <%= f.input :day, label: 'Day:', collection: 1..31   %>
      <br>
      <%= f.input :month, label: 'Month:', collection: 1..12  %>
      <br>
      <%= f.input :year, 'Year:': false, collection: 2015..2030  %>
      <br>
      <!-- Time -->
      <%= f.input :start, label: 'Start Time:' , placeholder: '00:00' %>
      <br>
      <%= f.input :end, label: 'End Time:' , placeholder: '00:00'  %>
      <br>
      <p><span class="form_box_font"><i class="ion-ios-location-outline"></i> Address:</span></p>
      <!-- Address -->
      <%= f.input :address_one, label: 'Venue:' , placeholder: 'Den Atelier'  %>
      <br>
      <%= f.input :address_two, label: 'Address:', placeholder: '54, rue de Hollerich'  %>
      <br>
      <%= f.input :postcode, label: 'Postal Code:', placeholder: 'L-1740'  %>
      <br>
      <%= f.input :city, label: 'City', placeholder: 'Luxembourg'  %>
      <br>
      <p><span class="form_box_font"><i class="ion-social-facebook"></i> Facebook Event Link</span></p>
      <!-- Facebook link -->
      <%= f.input :facebook, label: 'URL:', :input_html => { :size => 50}, placeholder: 'https://www.facebook.com/events/482525048587470/'    %>
      <br>
    </div>




    <div class="col-md-12">
    <%= f.button :submit %>
    <br>
    <br>
    </div>
</div>
<% end %>

